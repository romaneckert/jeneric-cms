- const view = require('@jeneric/app').view;

extends ../layout-signed-out.pug

block append head
    title=view.translate('jeneric.install.user_creation.title')
    meta(name="description" content=view.translate('jeneric.install.user_creation.description'))

block content

    h1.h2=view.translate('jeneric.install.user_creation.headline')

    h2.h3=view.translate('jeneric.install.user_creation.subline')

    .jeneric-text
        p=view.translate('jeneric.install.user_creation.text')

    +error(errors=form.errors)

    +form(method='post' form=form)
        .form-group
            label(for='email')=view.translate('jeneric.form.label.email')
            +textfield.form-control(id='email' type='email' name='email' form=form required='required')

        button.btn.btn-primary(type='submit')=view.translate('jeneric.form.submit')



