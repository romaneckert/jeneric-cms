extends ../layout.pug

block append head
    title Jeneric Install Step 1
    meta(name="description" content="Jeneric Install Step 1")

block content

    h1 Jeneric Install Step 1

    p We can not find a default user in the database. Please create a new one.

    +formError(form=form)

    +form(method='post' form=form)
        .form-group
            label(for='email') Email
            +textfield.form-control(type='email' name='email' form=form)
        .form-group
            label(for='password') Password
            +textfield.form-control(type='password' name='password' form=form)
        button.btn.btn-primary(type='submit') Submit
