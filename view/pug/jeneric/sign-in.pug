extends layout.pug

block append head
    title Login
    meta(name="description" content="Jeneric Login")

block content
    form(method='post')
        .form-group
            label(for='email') Email
            input.form-control(id='email' type='email' name="email")
        .form-group
            label(for='password') Password
            input.form-control(id='password' type='password' name="password")
        button.btn.btn-primary(type='submit') Submit
